{
  "name": "visualizer",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "vite": "^6.3.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "build:acs": "bun run --cwd ./packages/acs build",
    "build:engine": "bun run --cwd ./packages/engine build",
    "dev:visualizer": "bun run --cwd ./packages/documentation dev",
    "build:visualizer": "bun run --cwd ./packages/documentation build",
    "build:all-libs": "bun run build:acs && bun run build:engine",
    "typecheck": "tsc --noEmit -p ./tsconfig.base.json"
  },
  "dependencies": {
    "@webgpu/types": "^0.1.61"
  }
}
